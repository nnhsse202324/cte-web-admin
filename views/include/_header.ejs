<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CTE Certificates</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">


</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CTE Certificates</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <% 
                coursesCurrent = "";
                certificatesCurrent = "";
                confirmationCurrent = "";
                if( page == "courses") {
                    coursesCurrent = "active";
                }
                else if( page == "certificates") {
                    certificatesCurrent = "active";
                }
                else if( page == "confirmation") {
                    confirmationCurrent = "active";
                }

                
            %>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link <%= coursesCurrent %> " href="/">Courses</a>
                    </li>
                    <li class="nav-item">
                        <% if (typeof student !== 'undefined' && student.courses.length != 0) { %>
                            <a class="nav-link <%= certificatesCurrent %>" href="/certificates">Certificates</a>
                        <% } else { %>  
                            <a class="nav-link <%= certificatesCurrent %> disabled" href="/certificates">Certificates</a>
                        <% } %>
                    </li>
                    <li class="nav-item">
                        <% if (typeof student !== 'undefined' && student.certificates.length != 0) { %>
                            <a class="nav-link <%= confirmationCurrent %>" href="/confirmation">Summary</a>
                        <% } else { %>  
                            <a class="nav-link <%= confirmationCurrent %> disabled" href="/confirmation">Summary</a>
                        <% } %>
                    </li>

                    <% if (typeof student !== 'undefined') { %>
                    <li class="nav-item">  
                        <a class="nav-link" href="/export">Export</a>
                    </li>
                    <% } %>

                    <% if (typeof student !== 'undefined') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
